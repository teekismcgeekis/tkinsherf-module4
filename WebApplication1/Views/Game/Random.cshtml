@model WebApplication1.ViewModels.RandomGameViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Customer.Count > 5 ? "Popular" : null;
}

@Html.Partial("_NavBar")

<h2 class="@className">@Model.Game.Name</h2>

@if (Model.Customer.Count == 0)
{
    <text> No one has rented this game </text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customer)
        {
            <li>@customer.Name</li>
        }
    </ul>
}